<%- include('partials/header') %>
<h1>Edit Post</h1>
<form action="/posts/<%= post._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input class="form-control" type="text" id="postTitle" name="postTitle" value="<%= post.title %>" required>

        <label for="postBody">Content</label>
        <textarea class="form-control" id="postBody" name="postBody" rows="5" cols="30" required><%= post.content %></textarea>
    </div>
  <button class="btn btn-primary" type="submit">Update</button>
</form>
<%- include('partials/footer') %>