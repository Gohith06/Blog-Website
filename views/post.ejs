<%- include('partials/header') %>
    <h1><%= post.title %></h1>
    <p><%= post.content %></p>
    <form action="/posts/<%=post._id%>?_method=DELETE" method="POST" style="display: inline; float: left;">
        <button class="btn btn-primary" type="submit">Delete</button>
    </form>

    <form action="/posts/<%= post._id %>/edit" method="POST" style="display: inline; float: right;">
        <button class="btn btn-primary" type="submit">Edit</button>
    </form>
    
<%- include('partials/footer') %>